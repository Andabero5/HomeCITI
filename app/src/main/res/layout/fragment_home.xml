<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.HomeFragment"
    android:background="#E2E2E2">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/sc_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/ly_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/layout_header_home_partner">
                </include>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_layout_quick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:visibility="visible">

                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/layout_shimmer_home_partner">
                    </include>

                </com.facebook.shimmer.ShimmerFrameLayout>

                <LinearLayout
                    android:id="@+id/ll_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--AquÃ­ dentro de este linear
                    iremos pintando los layout
                    de cada uno de los widgets
                    -->


                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
</FrameLayout>